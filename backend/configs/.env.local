# Local Development Configuration
# Используется для локального Docker Registry и K3s развертывания

# Docker Registry Settings
REGISTRY_HOST=localhost:5000
REGISTRY_PORT=5000
REGISTRY_CONTAINER_NAME=local-docker-registry
REGISTRY_IMAGE=registry:2

# Application Image
IMAGE_NAME=demo-app
IMAGE_TAG=latest

# Kubernetes Settings
NAMESPACE=demo-app
DEPLOYMENT_NAME=demo-app

# K3s Settings
K3S_SERVER=https://localhost:6443

# Port Forwarding
LOCAL_PORT=8080
SERVICE_PORT=80

# Flask App Settings
APP_VERSION=1.0.0
ENVIRONMENT=development
FLASK_PORT=5000

# Database Configuration
DB_TYPE=sqlite
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=notes_db
DATABASE_URL=sqlite:///./notes_db.db

# Enable/Disable Components
ENABLE_REGISTRY=true
ENABLE_K3S=true
ENABLE_DOCKER_COMPOSE=true
